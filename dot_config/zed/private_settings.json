// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-thinking-latest"
    },
  },
  "language_models": {
    "bedrock": {
      "available_models": [
        {
          "name": "us.anthropic.claude-3-7-sonnet-20250219-v1:0",
          "display_name": "Claude 3.7 Sonnet (us-west-2)",
          "max_tokens": 200000,
          "max_output_tokens": 128000,
          "default_temperature": 1.0,
          "mode": {
            "type": "thinking",
            "budget_tokens": 4096
          }
        }
      ],
      "region": "us-west-2",
      "authentication_method": "default"
    }
  },
  "auto_install_extensions": {
    "html": true,
    "vue": true,
    "toml": true,
    "catppuccin": true,
    "tokyo-night": true,
    "github-theme": true,
    "sql": true,
    "git-firefly": true
  },
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "theme": "Kanagawa",
  "experimental.theme_overrides": {
    "syntax": {
      "type": {
        "color": "#e0af68"
      }
    }
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "ui_font_family": "Noto Sans Mono",
  "ui_font_size": 17,
  "format_on_save": "on",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "relative_line_numbers": true,
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Vue.js": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy" // rust-analyzer.check.command (default: "check")
        }
      }
    }
  },
  "terminal": {
    "default_height": 800,
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true,
    "default_width": 400
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "tabs": {
    "file_icons": true
  }
}
