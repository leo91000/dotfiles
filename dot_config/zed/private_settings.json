// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "auto_install_extensions": {
    "html": true,
    "vue": true,
    "catppuccin": true,
    "tokyo-night": true
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "theme": "Tokyo Night",
  "experimental.theme_overrides": {
    "syntax": {
      "type": {
        "color": "#e0af68"
      }
    }
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_weight": 400,
  "ui_font_family": "FiraCode Nerd Font Mono",
  "ui_font_size": 19,
  "buffer_font_size": 19,
  "format_on_save": "on",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "relative_line_numbers": true,
  "languages": {
    "JavaScript": {
      "formatter": "language_server",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "formatter": "language_server",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Vue.js": {
      "formatter": "prettier",
      "tab_size": 2,
      "format_on_save": "off",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "terminal": {
    "default_height": 800,
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true,
    "default_width": 400
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "tabs": {
    "file_icons": true
  }
}
