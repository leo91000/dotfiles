nnoremap <leader>fa :action GotoAction<CR>
nnoremap <leader>la :action ShowIntentionActions<CR>
nnoremap <leader>ld :action ShowErrorDescription<CR>
nnoremap <leader>dn :action GotoNextError<CR>
nnoremap <leader>dn :action GotoPreviousError<CR>
nnoremap <leader>gk :action Vcs.Push<CR>
nnoremap <leader>gK :action Vcs.UpdateProject<CR>
